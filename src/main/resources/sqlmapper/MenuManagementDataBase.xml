<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.MenuMapper">
    <resultMap id="store" type="StoreDTO">
        <result property="StoreId" column="store_id"/>
        <result property="name" column="name"/>
        <result property="content" column="content"/>
        <result property="address" column="address"/>
        <result property="phone" column="phoneNum"/>
        <result property="reviewCnt" column="reviewCnt"/>
        <result property="check" column="check"/>
    </resultMap>

    <resultMap id="menu" type="MenuDTO">
        <result property="MenuId" column="menu_id"/>
        <result property="category" column="category"/>
        <result property="name" column="name"/>
        <result property="stock" column="stock"/>
        <result property="price" column="price"/>
        <result property="storeId" column="store_store_id"/>
        <result property="optionNum" column="optionNum"/>
    </resultMap>

    <resultMap id="option" type="MenuOptionDTO">
        <result property="menuOptionId" column="menu_option_id"/>
        <result property="storeId" column="store_store_id"/>
        <result property="option" column="option"/>
        <result property="price" column="price"/>
    </resultMap>

    <insert id="registerOption">
        INSERT INTO option(menu_option_id, store_store_id, option, price)
        VALUES(#{menuOptionId}, #{storeId}, #{option}, #{price});
    </insert>

    <insert id="registerMenu">
        <if test="check = true">
            INSERT INTO menu(menu_id, category, name, price, menu_pic_url, popularity, created_date, modified_date, status, content, store_store_id)
            VALUES(#{id}, #{category}, #{name}, #{price}, #{picture}, #{popularity}, #{created}, #{modified}, #{status}, #{content}, #{storeId});
        </if>
    </insert>

    <select id="showAll" resultMap="menu">
        SELECT name, price, optionNum, stock
        FROM MENU
        ORDER BY category;
    </select>

    <update id = "modifyMenu2params">
        UPDATE menu SET
        <if test="#{price} != null and #{name} != null">
            name=#{name}, price=#{price}
        </if>
        WHERE menu_id= #{menuId};
    </update>

    <update id = "modifyMenuName">
        UPDATE menu SET
        <if test="#{name} != null">
            name=#{name}
        </if>
        WHERE menu_id= #{menuId};
    </update>

    <update id = "modifyMenuPrice">
        UPDATE menu SET
        <if test="#{price} != null">
            price=#{price}
        </if>
        WHERE menu_id= #{menuId};
    </update>

</mapper>