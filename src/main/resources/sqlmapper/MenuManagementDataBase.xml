<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.MenuMapper">
    <resultMap id="menu" type="MenuDTO">
        <result property="id" column="menu_id"/>
        <result property="category" column="category"/>
        <result property="name" column="name"/>
        <result property="stock" column="stock"/>
        <result property="price" column="price"/>
        <result property="storeId" column="store_store_id"/>
        <result property="optionNum" column="optionNum"/>
    </resultMap>

    <resultMap id="option" type="MenuOptionDTO">
        <result property="menuOptionId" column="menu_option_id"/>
        <result property="storeId" column="store_store_id"/>
        <result property="option" column="option"/>
        <result property="price" column="price"/>
    </resultMap>

    <insert id="registerOption">
        INSERT INTO option(menu_option_id, store_store_id, option, price)
        VALUES(#{menuOptionId}, #{storeId}, #{option}, #{price});
    </insert>

    <insert id="registerMenu">
        INSERT INTO menu(menu_id, category, name, price, menu_pic_url, popularity, created_date, modified_date, status, content, store_store_id)
        VALUES(#{id}, #{category}, #{name}, #{price}, #{picture}, #{popularity}, #{created}, #{modified}, #{status}, #{content}, #{storeId});
    </insert>

    <select id="showAll" resultMap="menu">
        SELECT * FROM MENU
    </select>

    <select id="modifyMenu" resultMap="menu">
        SELECT * FROM MENU
    </select>

</mapper>