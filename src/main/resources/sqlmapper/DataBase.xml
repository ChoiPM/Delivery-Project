<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.MenuMapper">
    <resultMap id="result" type="MenuDTO">
        <result property="id" column="menu_id"/>
        <result property="category" column="category"/>
        <result property="name" column="name"/>
        <result property="price" column="price"/>
        <result property="picture" column="menu_pic_url"/>
        <result property="popularity" column="popularity"/>
        <result property="created" column="created_date"/>
        <result property="modified" column="modified_date"/>
        <result property="status" column="status"/>
        <result property="content" column="content"/>
        <result property="storeId" column="store_store_id"/>
    </resultMap>

    <select id="registerOption" resultType="persistence.dto.registerOption">
        
    </select>

    <select id="registerMenu" resultType="persistence.dto.registerMenu">
        SELECT * FROM MENU
    </select>

    <select id="selectAll" resultType="persistence.dto.MenuDTO">
        SELECT * FROM MENU
    </select>

    <select id="modifyMenu" resultType="persistence.dto.modifyMenu">
        SELECT * FROM MENU
    </select>

</mapper>