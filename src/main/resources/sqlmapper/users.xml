<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.UsersMapper">
    <resultMap id="result" type="UsersDTO">
        <result property="idNum" column="user_id"/>
        <result property="password" column="password"/>
        <result property="phoneNum" column="phone"/>
        <result property="grade" column="grade"/>
        <result property="role" column="role"/>
        <result property="address" column="current_address"/>
        <result property="createdDate" column="created_data"/>
        <result property="modifiedDate" column="modified_date"/>
        <result property="status" column="status"/>
    </resultMap>
    <select id="selectAll" resultType="persistence.dto.UsersDTO">
        SELECT * FROM USERS
    </select>

</mapper>