<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace = "mapper.StoreMapper">
    <resultMap id="store" type="StoreDTO">
        <result property="name" column="name"/>
        <result property="address" column="address"/>
        <result property="phone" column="phoneNum"/>
        <result property="content" column="content"/>
        <result property="reviewCnt" column="reviewCnt"/>
    </resultMap>

    <insert id = "registerStore" >
        INSERT INTO STORE (store_id, name, type,food_category,address,phone,content,min_delivery_price,delivery_tip
                    ,delivery_time,rating,likes_cnt,review_cnt,operation_hour,closed_days,delivery_range,status)
        VALUES (#{store_id}, #{name},#{type} ,#{food_category},#{address},#{phone},#{content},#{min_delivery_price}
                    ,#{delivery_tip},#{delivery_time},#{rating}, #{likes_cnt},#{review_cnt},#{operation_hour}
                    ,#{closed_days},#{delivery_range},#{status});
    </insert>

    <select id = "showStore" resultMap = "store">
        SELECT * FROM STORE WHERE name LIKE CONCAT('%', #{storeName}, '%');
    </select>

</mapper>